<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="H1" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:layout_marginTop">@dimen/layout_margin</item>
        <item name="android:layout_marginEnd">@dimen/layout_margin</item>
        <item name="android:textSize">@dimen/title_h1_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="H2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:layout_marginTop">@dimen/layout_margin</item>
        <item name="android:layout_marginEnd">@dimen/layout_margin</item>
        <item name="android:textSize">@dimen/title_h2_text_size</item>
    </style>

    <style name="H3" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:layout_marginTop">@dimen/layout_margin</item>
        <item name="android:layout_marginEnd">@dimen/layout_margin</item>
        <item name="android:textSize">@dimen/title_h3_text_size</item>
    </style>

    <style name="Text" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:layout_marginTop">@dimen/layout_margin</item>
        <item name="android:layout_marginEnd">@dimen/layout_margin</item>
        <item name="android:textSize">@dimen/title_h5_text_size</item>
    </style>

    <style name="LayoutMarginStart" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:layout_marginStart">@dimen/layout_margin</item>
    </style>

    <style name="LayoutPadding" >
        <item name="android:paddingStart">@dimen/padding_out</item>
        <item name="android:paddingEnd">@dimen/padding_out</item>
        <item name="android:paddingTop">@dimen/padding_out</item>
        <item name="android:paddingBottom">@dimen/padding_out</item>
    </style>

    <style name="genreTitle">
        <item name="android:padding">@dimen/genre_title_padding</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:textSize">@dimen/title_h4_text_size</item>
        <item name="android:textColor">?genreColorFS</item>
    </style>

    <style name="filmInfoPadding" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:padding">@dimen/padding_out</item>
    </style>

    <style name="filmItemTitle" parent="filmItemField">
        <item name="android:textColor">?colorPrimaryDarkFS</item>
        <item name="android:textSize">@dimen/title_h6_text_size</item>
        <item name="android:paddingStart">@dimen/film_item_title_padding</item>
    </style>

    <style name="filmItemField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:maxHeight">@dimen/film_item_field_height</item>
    </style>

    <style name="popularityField" parent="popularityCommon">
        <item name="android:background">@drawable/back_border</item>
        <item name="android:layout_margin">@dimen/popularity_margin</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="popularityTextLarge" parent="popularityText">
        <item name="android:textSize">@dimen/title_h4_text_size</item>
    </style>

    <style name="popularityText" parent="popularityCommon">
        <item name="android:textSize">@dimen/title_h6_text_size</item>
        <item name="android:text">@string/popularity_text</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="popularityImage" parent="popularityCommon">
        <item name="android:src">@drawable/popularity_16</item>
    </style>

    <style name="popularityCommon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="adultField" parent="filmInfoFieldTitle">
        <item name="background">@drawable/back_border</item>
        <item name="android:textSize">@dimen/title_h3_text_size</item>
        <item name="android:layout_marginBottom">@dimen/layout_margin</item>
    </style>

    <style name="fieldTitle" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/title_h5_text_size</item>
    </style>

    <style name="filmInfoFieldTitle" parent="fieldTitle">
        <item name="android:layout_marginStart">@dimen/film_field_start_margin</item>
        <item name="android:layout_marginTop">@dimen/film_field_top_margin</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="filmInfoField" parent="filmInfoFieldTitle">
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">?colorPrimaryDarkFS</item>
        <item name="android:text">@string/empty_field</item>
    </style>

    <style name="playButton" parent="filmButton">
        <item name="android:background">@drawable/back_button</item>
        <item name="android:foreground">@drawable/back_ring</item>
        <item name="android:tint">@color/black</item>
    </style>

    <style name="filmButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@null</item>
    </style>

    <style name="searchFieldTitle" parent="fieldTitle">
        <item name="android:paddingStart">@dimen/search_options_padding</item>
        <item name="android:paddingEnd">@dimen/search_options_padding</item>
    </style>

    <style name="searchField" parent="searchFieldTitle">

    </style>

</resources>